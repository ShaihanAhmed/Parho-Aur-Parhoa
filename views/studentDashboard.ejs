        </div>

        <nav class="side-nav">
          <a class="nav-item active"><i class="ri-dashboard-3-line"></i> Dashboard</a>
          <a class="nav-item"><i class="ri-book-open-line"></i> My Courses</a>
          <a class="nav-item"><i class="ri-questionnaire-line"></i> Quizzes</a>
          <a class="nav-item"><i class="ri-bar-chart-2-line"></i> Grades</a>
        </nav>
      </div>

      <div class="sidebar-footer">
        <div>v1.0</div>
        <div style="margin-left:auto">Help</div>
      </div>
    </aside>



    <!-- MAIN -->
    <main class="main">

      <div class="topbar">
        <div class="welcome">
          <div>
            <h2>Welcome back, John!</h2>
            <small>Hope you have a productive day â€” keep learning ðŸŽ“</small>
          </div>
        </div>

        <div class="profile-mini">
          <img src="/images/papLogo.jpeg" alt="You" />
          <div class="meta">
            <b>John Doe</b>
            <span style="color:var(--muted);font-size:13px">Student</span>
          </div>
        </div>
      </div>



      <!-- STATS -->
      <section class="stats">

        <div class="stat">
          <div class="icon"><i class="ri-book-line"></i></div>
          <div>
            <div class="stat-label">Enrolled Courses</div>
            <div class="stat-num">4</div>
          </div>
        </div>

        <div class="stat">
          <div class="icon"><i class="ri-shield-check-line"></i></div>
          <div>
            <div class="stat-label">Quizzes Completed</div>
            <div class="stat-num">9</div>
          </div>
        </div>

        <div class="stat progress-circle">
          <div class="circular">
            <svg>
              <circle cx="45" cy="45" r="40"></circle>
              <circle cx="45" cy="45" r="40" class="bar"></circle>
            </svg>
            <div class="percent">66%</div>
          </div>
          <div>
            <div class="stat-label">Progress Tracker</div>
            <div class="stat-num">66% Completed</div>
          </div>
        </div>

      </section>



      <!-- GRID -->
      <div class="content-grid">

        <!-- LEFT -->
        <div>
          <section class="card">
            <h3>Your Courses</h3>

            <div class="course-row">
              <div class="course-info">
                <div class="course-thumb">CS</div>
                <div>
                  <div class="course-title">Web Development Basics</div>
                  <div class="course-sub">Instructor â€” Ali Rahman</div>
